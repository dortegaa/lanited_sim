<?xml version="1.0" encoding="UTF-8"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name = 'transmission'>
  
  <xacro:macro name="gripper_transmission" params="prefix">
      <transmission name="${prefix}left_finger_joint_tran">
        <type>transmission_interface/SimpleTransmission</type>
          <joint name="${prefix}left_finger_joint">
            <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
          </joint>
        <actuator name="${prefix}left_finger_joint_motor">
          <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
          <mechanicalReduction>1</mechanicalReduction>
        </actuator>  
      </transmission>
  </xacro:macro>
</robot>