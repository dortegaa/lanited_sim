<?xml version="1.0"?>
<launch>
  <arg name="gui" default="true" />
  
  <param name="robot_description"
         command="$(find xacro)/xacro --inorder $(find multi-robot_description)/urdf/multi-robot_grippers.urdf.xacro" />
  
  <param name="use_gui" value="$(arg gui)"/>
  
  <!--  
  <node name="joint_state_publisher" pkg="joint_state_publisher"
        type="joint_state_publisher" />
 -->
         
  <node name="joint_state_publisher_gui" pkg="joint_state_publisher_gui" 
        type="joint_state_publisher_gui"  output="screen" if="true" />

  <node name="robot_state_publisher" pkg="robot_state_publisher"
        type="robot_state_publisher" />

  <node name="rviz" pkg="rviz" type="rviz"
        args="-d $(find multi-robot_description)/config/multi-robot.rviz"
        required="true" />

</launch>
